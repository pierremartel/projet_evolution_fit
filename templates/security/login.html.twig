{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="row">
            <div class="col-6">
                <img src="./assets/img/login.jpg" alt="" width="650px" height="750px" class="opacity-75">
            </div>
            <div class="col-5 p-5">
                <h1 class="fs-3 text-center ">Se connecter à mon compte EvolutionFit</h1>
                <div class="underline_long "></div>
                <h2 class="fs-6 mt-5 mb-4 text-center ">Veuillez indiquer votre e-mail et mot de passe</h2>

                {% if error %}
                    <div class="alert alert-danger"> {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {{ form_start(form, {'attr': {novalidate: 'novalidate'}}) }}

                {{ form_errors(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
                
                <div class="text-end">
                    <a href="{{ path('security_forget_password') }}" class="mb-5 d-inline-block">Mot de passe oublié?</a>
                </div>

                <div class="text-center mb-4">
                    <button type="submit" class="btn btn-danger">Connexion</button>
                </div>

                {{ form_end(form) }}
                
                <p class="text-center">Pas encore de compte ? 
                    <a href="{{ path('security_registration') }}" class="text-danger text-uppercase">En créer un maintenant !</a>
                </p>
                
                
                

            </div>
        </div>
    </div>

    
{% endblock %}
