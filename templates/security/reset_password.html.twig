{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}

    <div class="container container__tablette mt-5">
        <div class="row">
            <div class="col col-md-6 col-lg-6">
                <img src="{{ asset('./Assets/img/login.jpg') }}" alt="Photo de salle de sport"  class="opacity-75 pic__login">
            </div>
            <div class="col col-md-6 col-lg-6 p-5">
                <h1 class="fs-3 text-center ">Réinitialissation du mot de passe</h1>
                <div class="underline_long mb-5 w-auto"></div>

                {# {% if error %}
                    <div class="alert alert-danger"> {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %} #}
                {{ form_start(formPassword, {'attr': {novalidate: 'novalidate'}}) }}

                {{ form_errors(formPassword) }}
                {{ form_row(formPassword.password) }}

                <div class="text-center mb-4">
                    <button type="submit" class="btn__back">Envoyer</button>
                </div>

                {{ form_end(formPassword) }}

            </div>
        </div>
    </div>

    
{% endblock %}
