{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="row">
            <div class="col-6">
                <img src="./assets/img/registration.jpg" alt="" width="650px" height="900px" class="opacity-75">
            </div>
            <div class="col-5 p-5">
                <h1 class="fs-3 text-center ">Créer votre compte EvolutionFit</h1>
                <div class="underline_long "></div>
                <h2 class="fs-6 mt-5 mb-4 text-center ">Veuillez saisir vos coordonnées</h2>

                {{ form_start(form, {'attr': {novalidate: 'novalidate'}}) }}

                {{ form_errors(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.lastname) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.plainPassword) }}
                {{ form_row(form.newsletter) }}


                <div class="text-center my-5">
                    <button type="submit" class="btn btn-danger">S'inscrire</button>
                </div>

                {{ form_end(form) }}

                <p class="text-center">Déjà inscrit ?
                    <a href="{{ path('security_login') }}" class="text-danger text-uppercase">Connecter vous à votre compte !</a>
                </p>
            </div>
        </div>
    </div>

    
{% endblock %}
