<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue{% endblock %}</title>
        <link rel="icon" type="image/jpg" href="{{ asset('favicon2.png') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=1" >
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Oswald:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css" >
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" >
            <link rel="stylesheet" href="{{ asset('./assets/css/style.css') }}">
        {% endblock %}

    </head>
    <body>

        {# Carousel Promo #}
        {% include 'shared/_infosBanner.html.twig' %}

        {# NavBar #}
        {% include 'shared/_navbar.html.twig' %}

        {# Message Flash #}
        {% for rubrique, messages in app.flashes %}
            <div class="alert alert-{{ rubrique }} text-center">
                {% for message in messages %}
                    <p>{{message}}</p>
                {% endfor %}
            </div>
        {% endfor %}

        {# Message d'alerte si le compte crée n'a pas été activé #}
        {% if app.user and app.user.isVerified == false %}
            <div class="alert alert-warning alert-dismissible text-end" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                <div class="alert-message">
                    <strong>Votre compte n'est pas activé</strong>, 
                    <a href="{{ path('security_resend_check') }}">renvoyer le lien d'activation</a>
                </div>
            </div>
        {% endif %}

        {% block body %}{% endblock %}

        {# Footer #}
        {% include 'shared/_footer.html.twig' %}
        

    </body>
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    {% endblock %}

</html>
