{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <header class="home__header">
        {% include 'home/_carousel_banner.html.twig' %}
        <a href="{{ path('product_shop')}} " class="home__header_btn ">Découvrez notre boutique</a>
    </header>
    <main class="home__main mt-5 ">
        <div class="container container__tablette container__mobile text-center">
            <div class="home__main_categorie">
                {% for c in categoryRepository.findAll() %}
                <div class="m-4 p-0 ">
                    <div class="home__main_content rounded">
                        <a href="{{ path('product_category', {'category':c.name, 'slug':c.slug}) }}">
                            <img src="{{ asset('/uploads/categoryImage/' ~ c.picture) }}" alt="Catégorie {{c.name}}" class="home__main_picture">
                            <p class="fs-2 text-white ">{{ c.name }}</p>
                            <button class="btn btn-light p-2 border rounded-2">Voir</button>
                        </a>
                    </div> 
                </div>
                {% endfor %}
            </div>
        </div>
    </main>
    <section class="home__section">
        <div class="container container__tablette">
            <div class="home__section_title mt-5 mb-3">
                <h1 class="text-capitalize">Nouveautés
                    <div class="underline_title"></div>
                </h1>
                <a href="{{ path('product_news') }}"><span class="fs-5">Voir tout</span></a>
            </div>
            
            <div class="row">
                {% for p in products %}
                <div class="col col-sm-12 col-md-4 col-lg-3">
                    <a href="{{ path('product_show', {'category':p.category.slug, 'slug':p.slug}) }}" class="text-decoration-none">
                        <img src="{{ asset('uploads/images/') ~ p.picture }}" alt="{{ p.name }}" class="home__section_product">
                        <h3 class="mt-3 mb-2 text-uppercase fs-5 ">{{ p.name }}</h3>
                        <p class="text-dark">{{ p.price |number_format(2) }}€</p>
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <div class="container container__tablette home__assurance my-5 ">
        <div class="row">
            <div class="col col-sm-12 col-md-4 col-lg-4 d-flex flex-column align-items-center position-relative">
                <img src="./assets/img/assurance.jpg" alt="logo assurance" class="home__assurance_logo">
                <h3 >Satisfait ou <br>Remboursé</h3>
                <i class="fa-solid fa-thumbs-up fa-2x home__assurance_icon"></i>
                <p >30 jours pour nous retourner <br/> si celà ne vous convient pas</p>
            </div>
            <div class="col col-sm-12 col-md-4 col-lg-4 d-flex flex-column align-items-center position-relative">
                <img src="./assets/img/assurance.jpg" alt="logo assurance" class="home__assurance_logo">
                <h3 >Livraison Express</h3>
                <i class="fa-solid fa-truck fa-2x home__assurance_icon"></i>
                <p >Livraison chez vous <br/> ou en Click & Collect</p>
            </div>
            <div class="col col-sm-12 col-md-4 col-lg-4 d-flex flex-column align-items-center position-relative">
                <img src="./assets/img/assurance.jpg" alt="logo assurance" class="home__assurance_logo">
                <h3 >Paiement Sécurisé</h3>
                <i class="fa-solid fa-credit-card fa-2x home__assurance_icon"></i>
                <p >Régler vos commandes <br/> en toute sérénité</p>
            </div>
        </div>
    </div>
    {% include 'shared/_newsletter.html.twig' %}

{% endblock %}
