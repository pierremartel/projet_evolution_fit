{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block javascripts %}

    <script type="text/javascript" src="./Assets/js/carousel_new_product.js" ></script>

{% endblock %}


{% block body %}

    <header class="home__header">
        {% include 'home/_carousel_banner.html.twig' %}
        <a href="{{ path('product_shop')}} " class="home__header_btn ">Découvrez notre boutique</a>
    </header>
    <main class="home__main mt-5 ">
        <div class="container container__tablette container__mobile text-center">
            <div class="home__main_categorie">
                {% for c in categoryRepository.findAll() %}
                <div class="p-0 home__main_product">
                    <div class="home__main_content rounded">
                        <a href="{{ path('product_category', {'category':c.name, 'slug':c.slug}) }}">
                            <img src="{{ asset('uploads/images/' ~ c.picture) }}" alt="Catégorie {{c.name}}" class="home__main_picture">
                            <p class="fs-2 text-white ">{{ c.name }}</p>
                            <button class="btn btn-light p-2 border rounded-2">Voir</button>
                        </a>
                    </div> 
                </div>
                {% endfor %}
            </div>
        </div>
    </main>
    <section class="home__section container">
        <div class=" position position-relative">
            <div class="home__section_title mt-5 mb-3">
                <h1 class="text-capitalize">Nouveautés
                    <div class="underline_title"></div>
                </h1>
                <a href="{{ path('product_news') }}"><span class="fs-5">Voir tout</span></a>
            </div>
            {# <div class=" home__section_content">
                {% for p in products %}
                    <div class="home__section_cart ">
                        <a href="{{ path('product_show', {'category':p.category.slug, 'slug':p.slug}) }}" class="text-decoration-none">
                            <img src="{{ asset('./uploads/images/') ~ p.picture }}" alt="{{ p.name }}" class="home__section_product">
                            <h3 class="mt-3 mb-2 text-uppercase fs-5 ">{{ p.name }}</h3>
                            <p class="text-dark">{{ p.price |number_format(2) }}€</p>
                        </a>
                    </div>
                {% endfor %}
            </div> #}
            <div class="home__section_content " id="carousel">
                {% for p in products %}
                    <div class="home__section_cart " id="content">
                        <a href="{{ path('product_show', {'category':p.category.slug, 'slug':p.slug}) }}" class="text-decoration-none">
                            <img src="{{ asset('./uploads/images/') ~ p.picture }}" alt="{{ p.name }}" class="home__section_product">
                            <h3 class="mt-3 mb-2 text-uppercase fs-6 ">{{ p.name }}</h3>
                            <p class="text-dark">{{ p.price |number_format(2) }}€</p>
                        </a>
                    </div>
                {% endfor %}
            </div>

            <button id="prev">
                <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                >
                <path fill="none" d="M0 0h24v24H0V0z" />
                <path d="M15.61 7.41L14.2 6l-6 6 6 6 1.41-1.41L11.03 12l4.58-4.59z" />
                </svg>
            </button>

            <button id="next">
                <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                >
                <path fill="none" d="M0 0h24v24H0V0z" />
                <path d="M10.02 6L8.61 7.41 13.19 12l-4.58 4.59L10.02 18l6-6-6-6z" />
                </svg>
            </button>

        </div>
    </section>
    <div class="container container__tablette my-5 ">
        <div class="home__assurance">
            <div class="position-relative home__assurance_content">
                <img src="{{ asset('./Assets/img/assurance.jpg') }}" alt="logo assurance" class="home__assurance_logo mb-2">
                <h3 >Satisfait ou <br>Remboursé</h3>
                <i class="fa-solid fa-thumbs-up fa-2x home__assurance_icon"></i>
                <p class="fs-5">30 jours pour nous <br/>retourner si celà ne <br/>vous convient pas</p>
            </div>
            <div class="position-relative home__assurance_content">
                <img src="{{ asset('./Assets/img/assurance.jpg') }}" alt="logo assurance" class="home__assurance_logo mb-2">
                <h3 >Livraison <br>Express</h3>
                <i class="fa-solid fa-truck fa-2x home__assurance_icon"></i>
                <p class="fs-5">Livraison chez vous <br/> ou en Click & Collect</p>
            </div>
            <div class="position-relative home__assurance_content">
                <img src="{{ asset('./Assets/img/assurance.jpg') }}" alt="logo assurance" class="home__assurance_logo mb-2">
                <h3 >Paiement <br>Sécurisé</h3>
                <i class="fa-solid fa-credit-card fa-2x home__assurance_icon"></i>
                <p class="fs-5">Régler vos commandes <br/> en toute sérénité</p>
            </div>
        </div>
    </div>
    {% include 'shared/_newsletter.html.twig' %}

{% endblock %}


