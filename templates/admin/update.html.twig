{% extends 'base.html.twig' %}

{% block title %}
    Modification de {{ product.name }}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            {% include 'admin/_navDashboard.html.twig' %}

            <main class="col-9 p-5 admin__main">
                <h1>Modification du produit: {{ product.name }}</h1>
                <div class="underline_title text-center mb-5"></div>

                    {{form_start(form)}}
                    {{form_errors(form)}}
                        <div class="row">   
                            <div class="col">   
                            {{form_row(form.name)}}
                            {{form_row(form.category)}}
                            {{form_row(form.quantity)}}
                            {{form_row(form.status)}}
                            {{form_row(form.price)}}
                        </div> 
                        <div class="col">
                            {{form_row(form.description)}}   
                            {{form_row(form.size)}}
                            {{form_row(form.event)}}
                            {{form_row(form.picture)}}
                        </div> 
                        </div>
                    <button type="submit" class="btn btn-success mt-5">
                        <i class="fas fa-save"></i>
                        Enregistrer
                    </button>

                    {{form_end(form)}}
            </main>
        </div>  
    </div>
{% endblock %}
