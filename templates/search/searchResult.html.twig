{% extends 'base.html.twig' %}

{% block title %} Recherche pour "{{ search }}"{% endblock %}


{% block body %} 

    {% if searchResult %}

        <header class="container container__tablette mt-5">
            <div class="">
                <h1>Recherche pour <span class="text-danger">{{ search }}</span></h1>
                <div class="underline_title"></div>
            </div>
        </header>
        <main class="container container__tablette">
            <div class="count">
                <h2 class="fs-5 my-4 fst-italic text-dark text-capitalize">{{ searchResult | length }} produits trouv√©s </h2>
            </div>
            <div class="d-flex flex-wrap">
                {% for p in searchResult %}
                    <div class="shop__card">
                        <a href="{{ path('product_show', {'category':p.category.slug, 'slug':p.slug}) }}" class="text-decoration-none">
                            {% include 'product/_product_card.html.twig' %}
                        </a>
                    </div>
                {% endfor %}
            </div>
        </main>

    {% else %}
        <p>Aucun articles</p>
    {% endif %}

{% endblock %}
